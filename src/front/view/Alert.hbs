{{!-- data context -> controllers.Alert --}}
{{#if options.image}}
<div class="ui basic modal">
{{else}}
<div class="ui basic small modal">
{{/if}}

  {{#if closable}}
  <i class="close icon"></i>
  {{/if}}

    <div class="header">
        {{options.title}}
    </div>

    <div class="image content">
        <div class="ui {{#if options.image}}big{{/if}} image" {{#if options.iframe}}style="width:400px;height:270px"{{/if}}>
            {{#if options.icon}}
            <i class="{{options.icon}} icon"></i>
            {{/if}}
            {{#if options.image}}
            <img src="{{options.image}}">
            {{/if}}
            {{#if options.iframe}}
            <iframe src="{{options.iframe}}" width="1600" height="1080" style="border:none;transform:scale(0.25,0.25);transform-origin:top left; background: white" ></iframe>
            {{/if}}
        </div>

        <div class="description" {{#if options.dropdown}}style="width:100%"{{/if}}>
            {{#if options.body}}
            <p>{{options.body}}</p>
            {{/if}}

            {{#if options.link}}
            <a href="{{options.link}}{{#if options.timestamp}}?{{options.timestamp}}{{/if}}" target="_blank">{{options.link}}</a>
            {{/if}}

            {{#if options.dropdown}}
            <div class="ui fluid search selection dropdown">
                <input type="hidden" name="file">
                <i class="dropdown icon"></i>
                <div class="default text">Select</div>
                <div class="menu">
                    {{#each options.dropdown}}
                        <div class="item" data-value="{{AlertDrop_isImageUrl this 2}}">{{AlertDrop_isImage this}}{{AlertDrop_isImageUrl this 1}}</div>
                    {{/each}}
                </div>
            </div>
            {{/if}}

            {{#if options.input}}
            <div class="ui medium corner labeled input">
                <input type="text" placeholder="{{options.input}}">
                <div class="ui corner label">
                    <i class="add circle icon"></i>
                </div>
            </div>
            {{/if}}

            {{#if options.progress}}
            <div class="ui indicating progress">
              <div class="bar"><div class="progress"></div></div>
            </div>
            {{/if}}

        </div>
    </div>

    <div class="actions">
        <div class="{{buttonCount}} fluid ui inverted buttons">

            {{#if onDeny}}
            <div class="ui {{options.onDenyClass}} basic inverted button"><i class="{{options.onDenyIcon}} icon"></i>{{options.onDenyText}}</div>
            {{/if}}

            {{#if onApprove}}
            <div class="ui {{options.onApproveClass}} basic inverted button"><i class="{{options.onApproveIcon}} icon"></i>{{options.onApproveText}}</div>
            {{/if}}

        </div>
    </div>

</div>
